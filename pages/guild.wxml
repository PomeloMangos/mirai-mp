<view wx:if="{{ activeLayout == 0 }}">
    <guild-activity wx:if="{{ guild && layouts[0].active == 'home' }}" guild="{{ guild }}"></guild-activity>
</view>

<view class="{{ isFullScreen ? 'footer footer-full' : 'footer' }}">
    <view class="table">
        <!-- 无公会底部导航栏 -->
        <view class="table-tr" wx:if="{{ activeLayout == 0 }}">
            <view class="table-td" style="color: {{ layouts[0].active == 'home' ? '#3dd0d8' : '#c2d4f8' }}" data-layout="0" data-active="home" bindtap="switchTab">
                <div class="btn-icon"><i class="fa fa-rocket"></i></div>
                <div class="btn-text">活动</div>
            </view>
            <view class="table-td" style="color: {{ layouts[0].active == 'home2' ? '#3dd0d8' : '#c2d4f8' }}" data-layout="0" data-active="home2" bindtap="switchTab">
                <div class="btn-icon"><i class="fa fa-user"></i></div>
                <div class="btn-text">我的</div>
            </view>
        </view>
    </view>
</view>